# =============================================================================
# DecisionFlow Application - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values.
# DO NOT commit .env to version control (it's in .gitignore)
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: OpenAI Configuration
# -----------------------------------------------------------------------------
# Your OpenAI API key (required for LLM functionality)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI model to use
# Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview, etc.
# Default: gpt-3.5-turbo
OPENAI_MODEL=gpt-3.5-turbo

# Maximum tokens for LLM responses (1-8000)
# Default: 2000
OPENAI_MAX_TOKENS=2000

# Temperature for LLM calls (0.0-2.0)
# 0.0 = deterministic output, higher = more creative
# Default: 0.0
OPENAI_TEMPERATURE=0.0

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# API version (used in URL paths, e.g., /v1/decisions/analyze)
# Default: v1
API_VERSION=v1

# Logic version (prompt bundle version)
# Default: v1.0.0
LOGIC_VERSION=v1.0.0

# Schema version (for compatibility tracking)
# Default: v1.0.0
SCHEMA_VERSION=v1.0.0

# -----------------------------------------------------------------------------
# API Authentication (Optional)
# -----------------------------------------------------------------------------
# Comma-separated list of allowed API keys for authentication
# Leave empty to disable API key authentication
# Example: key1,key2,key3
ALLOWED_API_KEYS=

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Maximum concurrent LLM requests (1-20)
# Default: 5
LLM_MAX_CONCURRENT_REQUESTS=5

# Request timeout in seconds (1-300)
# Default: 30
LLM_REQUEST_TIMEOUT=30

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for future caching/rate limiting)
# -----------------------------------------------------------------------------
# Redis host
# Default: localhost
REDIS_HOST=localhost

# Redis port (1-65535)
# Default: 6379
REDIS_PORT=6379

# Redis database number (0-15)
# Default: 0
REDIS_DB=0

# Redis password (leave empty for local development without password)
# Default: (empty)
REDIS_PASSWORD=

# Redis connection pool size (1-100)
# Default: 10
REDIS_POOL_SIZE=10

# -----------------------------------------------------------------------------
# Rate Limiting (Optional)
# -----------------------------------------------------------------------------
# Requests per minute per API key
# Default: 60
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Burst capacity
# Default: 20
RATE_LIMIT_BURST=20

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Log format: json or text
# Default: json
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
# Environment type: development, staging, production
# Default: development
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Application host (0.0.0.0 to listen on all interfaces)
# Default: 0.0.0.0
APP_HOST=0.0.0.0

# Application port (1-65535)
# Default: 8000
APP_PORT=8000

# Enable auto-reload in development (true/false)
# Default: true
APP_RELOAD=true
